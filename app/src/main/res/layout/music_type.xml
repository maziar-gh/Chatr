<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_channel_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_music_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#50C059"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_music_controll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="13dp"
                            android:paddingLeft="13dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            app:srcCompat="@drawable/white_play" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/tv_music_text_channel"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:textAppearance="@android:style/TextAppearance.Small" />

            </LinearLayout>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/tv_music_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingRight="17dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>