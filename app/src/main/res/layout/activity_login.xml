<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.LoginActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_phone_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="#32673AB7"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/logo" />

                    <EditText
                        android:id="@+id/edt_phone_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="09112345678"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_sendcode_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/round_button"
                        android:enabled="false"
                        android:text="ارسال کد فعال سازی"
                        android:textSize="16sp"
                        android:title="ارسال کد فعال سازی" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="برای ورود شماره موبایل خود را وارد کنید"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_verfication_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                app:cardBackgroundColor="#32673AB7"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_verfication_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="XXXX"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="19sp" />

                    <Button
                        android:id="@+id/btn_verfication_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_button"
                        android:text="بررسی کد"
                        android:textSize="16sp"
                        android:title="تایید" />

                    <TextView
                        android:id="@+id/tv_changephone_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:title="تغییر شماره تلفن" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_version_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:title="نسخه: "
            android:textColor="@color/colorPrimaryDark" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>